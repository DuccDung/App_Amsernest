@model int

<div class="card shadow rounded-3 p-4 w-100" style="max-width: 600px;">
    <h2 class="h4 fw-bold text-primary mb-4">Nestmeet – Thiết lập lịch hẹn</h2>
    <input type="number" id="wtm_id_set_time-detail" value="@Model" hidden />
    <div class="mb-3">
        <label for="adminSetDate" class="form-label fw-semibold">📅 Chọn ngày:</label>
        <input type="date" id="adminSetDateInDetail" class="form-control">
    </div>
    <div class="row mb-3">
        <div class="col">
            <label for="adminSetTimeStart" class="form-label fw-semibold">⏰ Giờ bắt đầu:</label>
            <input type="time" id="adminSetTimeStartInDetail" class="form-control">
        </div>
        <div class="col">
            <label for="adminSetTimeEnd" class="form-label fw-semibold">⏰ Giờ kết thúc:</label>
            <input type="time" id="adminSetTimeEndInDetail" class="form-control">
        </div>
    </div>

    <div class="d-grid mb-4">
        <button onclick="addSlotInDetail()" type="button" id="btn_add_slot_time_indetail" class="btn btn-primary">
            ➕ Thêm Slot
        </button>
    </div>

    <hr class="my-4">

    <h5 class="fw-semibold mb-2">📋 Danh sách Slot đã tạo:</h5>
    <ul id="adminSlotListInDetail" class="list-group overflow-auto" style="max-height: 240px;">
        @await Component.InvokeAsync("TimeSlot_WTM", new { wtmId = Model })
    </ul>
</div>


