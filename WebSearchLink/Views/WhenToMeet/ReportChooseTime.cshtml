@using static WebSearchLink.Controllers.WhenToMeetController
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Timeline Design with Time Slots</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .timeline {
            width: 100%;
            margin-top: 50px;
            text-align: center;
        }

        .topic {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .line {
            width: 100%;
            height: 2px;
            background-color: #333;
            position: relative;
            margin: 0 auto;
        }

        .event {
            background-color: #fff;
            border: 2px solid #333;
            padding: 10px;
            border-radius: 5px;
            text-align: center;
            width: 100%;
            margin: 5px;
        }

        .date {
            font-size: 16px;
            font-weight: bold;
        }

        .slots {
            margin-top: 10px;
            text-align: left;
        }

        .slot {
            background-color: #f0f0f0;
            padding: 5px;
            margin: 3px 0;
            border-radius: 3px;
            font-size: 14px;
            display: flex;
            justify-content: space-between;
        }

        .circle {
            color: white;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 14px;
        }

            .circle.normal {
                background-color: #4189e6;
            }

            .circle.gray {
                background-color: #d3d3d3;
            }
    </style>
</head>
@model List<SlotDateModel>
<body>
    <div class="container">
        <!-- Header -->
        <header class="text-center my-4">
            <h2>Quản lý lịch - Nestmeet</h2>
        </header>

        <!-- Timeline -->
        <div class="timeline">
            <div class="topic">Timeline Events</div>
            <div>
                <div class="row">
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            @if (item.SlotTimes != null)
                            {
                                <div class="col-md-4">
                                    <div class="event">
                                        <span class="date">@item.SlotDate</span>
                                        <div class="slots">
                                            @foreach (var st in item.SlotTimes)
                                            {
                                                <div class="slot">
                                                    <div class="time">@st.StartTime -> @st.EndTime</div>
                                                    @await Component.InvokeAsync("TotalBooking", new { stId = st.Id })
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



