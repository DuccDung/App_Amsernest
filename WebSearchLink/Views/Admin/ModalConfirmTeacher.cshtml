@model Teacher
<style>
    .hide {
        display: none;
    }
</style>
<div id="overlay-confirm" style="display:block; position:fixed; inset:0; background:rgba(0,0,0,0.6); z-index:9999;"></div>

<div id="confirm-modal" style="display:block; position:fixed; top:50%; left:50%; transform:translate(-50%,-50%);
    background:white; padding:30px; border-radius:12px; z-index:10000; text-align:center;">
    <h4>Are you sure you want to confirm this Teacher?</h4>
    <h5><i class="fas fa-user-graduate"></i> Teacher Name: @Model?.FullName</h5>
    <input type="number" id="modal-teacher-id" name="name" hidden value="@Model?.TeacherId" />
    <button id="confirm-submit-Teacher" class="btn btn-success mt-3">Confirm Teacher</button>
</div>